#!/usr/bin/env bash

# Bar and window manager style settings
bar_style=minimal
window_border="0"

if [[ "$bar_style" == "base" ]];then
	top_padding="23"
	bottom_padding="23"
	conky="On"
elif [[ "$bar_style" == "minimal" ]];then
	top_padding="0"
	bottom_padding="25"
	conky="Off"
elif [[ "$bar_style" == "bionic" ]];then
	top_padding="35"
	bottom_padding="0"
	conky="On"
fi

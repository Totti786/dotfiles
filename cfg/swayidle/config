# Turn off the screen after 20 minutes of inactivity
timeout 1200 'hyprctl dispatch dpms off'
# Lock after 19 minutes of inactivity
timeout 1140 'gtklock -d -m playerctl-module -m powerbar-module -m userinfo-module'
before-sleep 'gtklock -d -m playerctl-module -m powerbar-module -m userinfo-module'
lock 'gtklock -d -m playerctl-module -m powerbar-module -m userinfo-module'

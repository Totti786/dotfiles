#!/usr/bin/env bash

## Environtment
export PATH="${PATH}:$HOME/.local/bin"

### Get colors from .Xresources ------------------------------#
#xrdb ~/.Xresources
#getcolors() {
	#FOREGROUND=$(xrdb -query | grep 'foreground:'| awk '{print $NF}')
	#BACKGROUND=$(xrdb -query | grep 'background:'| awk '{print $NF}')
	#BLACK=$(xrdb -query | grep 'color0:'| awk '{print $NF}')
	#RED=$(xrdb -query | grep 'color1:'| awk '{print $NF}')
	#GREEN=$(xrdb -query | grep 'color2:'| awk '{print $NF}')
	#YELLOW=$(xrdb -query | grep 'color3:'| awk '{print $NF}')
	#BLUE=$(xrdb -query | grep 'color4:'| awk '{print $NF}')
	#MAGENTA=$(xrdb -query | grep 'color5:'| awk '{print $NF}')
	#CYAN=$(xrdb -query | grep 'color6:'| awk '{print $NF}')
	#WHITE=$(xrdb -query | grep 'color7:'| awk '{print $NF}')
#}
#getcolors


## Configurations --------------------------------------------#
workspaces() {
	name=1
	for monitor in `bspc query -M`; do
		bspc monitor ${monitor} -n "$name" -d '一' '二' '三' '四' '五' '六' '七' '八'
		#bspc monitor ${monitor} -n "$name" -d '' '' '' '' '' '' '' '' '九' '十'
		let name++
	done
}
workspaces

bspc config border_width 0
bspc config window_gap 10
bspc config split_ratio 0.50

. "$HOME/.cache/wal/colors.sh"
bspc config focused_border_color "$color1" 
bspc config normal_border_color "$color0"
bspc config active_border_color "$color5"
bspc config presel_feedback_color "$color4"

bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config paddingless_monocle true
bspc config single_monocle false
bspc config focus_follows_pointer true

## Window rules ----------------------------------------------#

# remove all rules first
bspc rule -r *:*

## special rules
declare -a floating=(alacritty-float obs Onboard Yad 'Firefox:Picture-in-Picture' \
Viewnior feh Nm-connection-editor stalonetray copyq kotatogram-desktop xfce4-settings-manager AudioRelay)

for i in ${floating[@]}; do
   bspc rule -a $i state=floating follow=on focus=on; done
   
bspc rule -a Zathura state=tiled


## Autostart Programs ----------------------------------------#

## Keybinds
exec sxhkd &

# Enable Super Keys For Menu
xcape -e 'Super_L=Alt_L|F1' &
xcape -e 'Super_R=Alt_L|F1' &

# Polkit agent
if [[ ! `pidof xfce-polkit` ]]; then
	/usr/lib/xfce-polkit/xfce-polkit &
fi 

## Fix cursor
xsetroot -cursor_name left_ptr

## xfce4-settings daemon
xfsettingsd &

## Dunst
dunst &

## Enable power management
xfce4-power-manager &

## Color Profile 
xiccd &

## Restore Wallpaper
wal -Re &
sh ~/.scripts/wpgtk run &

## Launch Polybar
sh ~/.config/polybar/launch.sh &
bspc config -m focused top_padding 23 
bspc config -m focused bottom_padding 23 

## Picom	
picom --experimental-backends &

## Stalonetray 
~/.config/polybar/scripts/systray &

## CopyQ
copyq --start-server &

## Thunar Daemon
exec thunar --daemon &

## Excute Screenshot script
#exec sh ~/.scripts/check.sh &

## Touchegg
#exec touchegg --daemon &
#exec touchegg &

## Trackma Launch
#exec trackma-gtk &

## Plank
exec plank &

## Discord Launch
#exec discord &

## KDE Conenct
exec kdeconnect-indicator &

#!/usr/bin/env bash

# Autostart Programs ----------------------------------------#

[[ -f "$HOME/.theme" ]] && source "$HOME/.theme" || conky="On"

# XDG Autostart 
[[ ! $(pgrep -f polkit-gnome-authentication-agent) ]] && xdg-autostart

# Screenlocker
xss-lock -l lockscreen &

# Keybinds
killall -q -9 sxhkd
sxhkd -c "$HOME"/.config/sxhkd/sxhkdrc "$HOME"/.config/sxhkd/bspwm-sxhkdrc &

# Enable Super Keys For Menu
killall -q -9 xcape
xcape -e 'Super_L=Alt_L|F1' &
xcape -e 'Super_R=Alt_L|F1' &

# Polkit agent
[[ ! $(pgrep -f polkit-gnome-authentication-agent) ]] && /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# xfce4-settings daemon
xfsettingsd &

# Compositor 
compositor --start &

# Ambient light manager
clight &

# Touchpad Gestures
if libinput list-devices | grep -qiw 'Touchpad'; then
	killall -q -9 fusuma
	fusuma -d &
fi

# Dunst
dunst &

# Restore Wallpaper
wpgtk restore &

# Launch Polybar
"$HOME"/.config/polybar/launch.sh &

# CopyQ
copyq --start-server &

# Plank
killall -q -9 plank
plank &

# Conky
[[ "$conky" == "On" ]] && "$HOME"/.local/bin/conky.sh &

# Fix Plank
bspc subscribe node_add | while read -r _
do
	xdo raise -N Plank
done &

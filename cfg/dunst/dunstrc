#See dunst(5) for all configuration options

[global]

    monitor = 0

    width = (111, 444)

    height = 222

    origin = top-right

    offset = 15x55

    scale = 0

    notification_limit = 0

    progress_bar = true

    progress_bar_height = 10

    progress_bar_frame_width = 1


    progress_bar_min_width = 150

    progress_bar_max_width = 300

    indicate_hidden = yes

    transparency = 1

    separator_height = 5

    padding = 15

    horizontal_padding = 15

    text_icon_padding = 0

    frame_width = 0

    frame_color = ""

    separator_color = frame

    sort = yes

    font = JetBrains Mono Regular 10

    line_height = 0

    markup = full
	
	word_wrap = yes
	
    format = "<b>%s</b>\n%b"

    alignment = center

    vertical_alignment = center

    show_age_threshold = 60

    ellipsize = middle

    ignore_newline = yes

    stack_duplicates = true

    hide_duplicate_count = false

    show_indicators = no

    icon_position = left

    max_icon_size = 100
    
    always_run_script = true

    mouse_left_click = do_action, close_current
    
    mouse_middle_click = do_action, close_current
    
    mouse_right_click = close_all
    
    browser = /usr/bin/firefox -new-tab
    

[log_notifs]
    script = ~/.local/bin/dunst-logger

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#0B0719"
    foreground = "#f5f2ff"
    highlight  = "#b6beca"
    timeout = 5

[urgency_normal]
    background = "#0B0719"
    foreground = "#f5f2ff"
    highlight  = "#b6beca"
    timeout = 10

[urgency_critical]
    background = "#0B0719"
    foreground = "#f5f2ff"
    highlight  = "#b6beca"
    timeout = 15

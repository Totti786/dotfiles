  <applications>
    <application name="gl" class="mpv" title="Unnamed Window" type="normal">
      <position force="yes">
        <x>center</x>
        <y>center</y>
      </position>
      <size>
        <width>50%</width>
      </size>
      <decor>no</decor>
    </application>

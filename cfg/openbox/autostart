#!/bin/bash

## Autostart Programs

### Kill already running process
#_ps=(picom dunst ksuperkey dunst xfce4-power-manager stalonetray)
#for _prs in "${_ps[@]}"; do
	#if [[ `pidof ${_prs}` ]]; then
		#killall -9 ${_prs}
	#fi
#done

## Polkit agent
#if [[ ! `pidof xfce-polkit` ]]; then
	#/usr/lib/xfce-polkit/xfce-polkit &
#fi 
	
## xfce4-settings daemon
xfsettingsd &

## Dunst
dunst &

## Picom	
picom --experimental-backends &

## Restore Wallpaper
#wal -Re &
sh .fehbg &
sh ~/.scripts/wpgtk run &

# Enable power management
xfce4-power-manager &

# Enable Super Keys For Menu
ksuperkey -e 'Super_L=Alt_L|F1' &
ksuperkey -e 'Super_R=Alt_L|F1' &

## Launch Polybar
exec sh ~/.config/polybar/launch.sh &

## CopyQ
copyq --start-server &

## Stalonetray 
~/.config/polybar/scripts/systray &

## Excute Screenshot script
#exec sh ~/.scripts/check.sh &

## Discord Launch
#exec discord &

## Trackma Launch
#exec trackma-gtk &

## Color Profile 
#xiccd &


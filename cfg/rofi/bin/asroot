rofi_command="rofi -theme asroot"

# Apps
terminal=" Alacritty"
files=" Thunar"
editor=" Geany"
clifm=" Ranger"
vim=" Vim"

get_root(){
	## rofi sudo askpass helper
	export SUDO_ASKPASS=~/.config/rofi/bin/askpass.sh
	
	## execute the application
	sudo -A $1
}

# Variable passed to rofi
options="$terminal\n$files\n$editor\n$clifm\n$vim"

# Functions

chosen="$(echo -e "$options" | $rofi_command -p "Run as root" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        get_root 'alacritty --class alacritty-float,alacritty-float'
        ;;
    $files)
        get_root 'dbus-run-session thunar'
        ;;
    $editor)
        get_root geany
        ;;
    $clifm)
        get_root 'alacritty --class alacritty-float,alacritty-float -e ranger'
        ;;
    $vim)
        get_root 'alacritty --class alacritty-float,alacritty-float -e vim'
        ;;
esac

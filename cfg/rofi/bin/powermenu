#!/usr/bin/env bash

## This script should work with any Arch based system that uses systemd
## The logout option only works with Openbox, i3 and BSPWM and Hyprland

DIR="$HOME/.config"
rofi_command="rofi -theme $DIR/rofi/themes/power-screen.rasi"

# Options
shutdown=""
reboot=""
lock=""
suspend=""
logout=""
confirm="Yes"

# Variable passed to rofi
options="$shutdown\n$reboot\n$lock\n$suspend\n$logout"

chosen="$(echo -e "$options" | $rofi_command -p "UP - $uptime" -dmenu -selected-row 2)"
case "$chosen" in
    "$shutdown")
		ans=$($HOME/.config/rofi/bin/confirm &)
		if [[ "$ans" == "$confirm" ]]; then systemctl poweroff ;fi
        ;;
    "$reboot")
		ans=$($HOME/.config/rofi/bin/confirm &)
		if [[ "$ans" == "$confirm" ]]; then	systemctl reboot ;fi
        ;;
    "$lock")
		lockscreen
    	;;
    "$suspend")
		ans=$($HOME/.config/rofi/bin/confirm &)
		if [[ "$ans" == "$confirm" ]]; then systemctl suspend && lockscreen ;fi
        ;;
    "$logout")
		current_desktop=$(wmctrl -m |sed -n 1p | sed -e 's/Name: //g') 
		ans=$($HOME/.config/rofi/bin/confirm &)
		if [[ "$ans" == "$confirm" ]]; then
			if [[ "$current_desktop" == "Openbox" ]]; then
				openbox --exit
			elif [[ "$current_desktop" == "i3" ]]; then
				i3 exit
			elif [[ "$current_desktop" == "bspwm" ]]; then
				bspc quit
			elif [[ "$current_desktop" == "herbstluftwm" ]]; then
				herbstclient quit
			elif [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
				hyprctl dispatch exit
			fi
        fi
        ;;
esac

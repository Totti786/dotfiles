##------- Keybindings -------##

# Terminal (alacritty)
super + Return
	alacritty

# Drop-down Terminal
alt + Return
	furminal --drop

# Floating Terminal
super + shift + Return
	furminal --float

# Fullscreen Terminal
super + t
	furminal --full

##------ Rofi & Menus -------##

# Right click menu
~button3
	xqp 0 $(xdo id -N i3 -n root) && jgmenu_run 

alt + space
	jgmenu_run

~button2
	xqp 0 $(xdo id -N i3 -n root) && \
	windowswitch window "-monitor -3"

# Rofi App Launcher
alt + F1
	~/.config/rofi/bin/launcher

# Rofi Menus/Applets
super + {m,x,r,s}
	~/.config/rofi/bin/{media,powermenu,asroot,screenshot}

##------ Applications -------##

# Launch Apps
super + {e,f,w,o,g,b,y,a,v,p}
	{thunar,firefox,geany,obs,zathura,rofi-bluetooth,ytfzf -fD,aniwrapper,copyq show,color-picker}

super + z
	discord --enable-gpu-rasterization

super + shift + {s,w,r,d,g}
	{spotify,wpgtk pick,rhythmbox,dmenu.sh,rofi-zathura}

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty -e {vim,ranger,htop}

# Reset Wallpaper
ctrl + alt + b
	~/.fehbg

# Lockscreen
ctrl + alt + l
   lockscreen

# Random Wallpaper
ctrl + alt + w
   wpgtk random

##------- System Keys -------##

# Take a screenshot
Print
	takeshot --now

# Take screenshot using flameshot
alt + Print
	flameshot gui

# Take screenshot of an area
shift + Print
	takeshot --area

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	volume{ --inc, --dec, --toggle}

# Media control
XF86Audio{Next,Prev,Play,Pause,Stop}
	playerctl {next,previous,play-pause,play-pause,stop}

##---------- Misc. ----------##

# Restart Polybar
super + shift + m
	~/.config/polybar/launch.sh

# Kill window
super + Escape
	xkill

# Switch window
alt + Tab
	windowswitch windowcd

# Switch window (across worksapces)
super + Tab
	windowswitch window

##----------- i3 ------------##

# Focus to the given desktop
super + {1-8}
    i3-msg workspace {1-8}
    
# Switch workspace
ctrl + super + {Left,Right,Up,Down}
	~/.config/i3/i3-workspaces {prev,next,prev,next}

# Move to the next or the previous workspace
super + {~button4, ~button5}
	~/.config/i3/i3-workspaces {prev,next}

# Send focused window to another workspace and switch to the workspace
super + shift + {1-8}
	i3-msg move container to workspace number{1-8}

# Close App
super + {q,c}
	i3-msg kill

# Change focus
super + {j,k,l,semicolon}
	i3-msg focus {left,down,up,right}

super + {Left,Down,Up,Right}
	i3-msg focus {left,down,up,right}

# Split horizontal, vertical or cancel
super + shift + {h,v}
	i3-msg split {h,v}

# Fullscreen
super + shift + f
    i3-msg fullscreen toggle

# Toggle beetwen floating & tiled
super + space
    i3-msg floating toggle

# Set the node flags
super + shift + {x,c}
	i3-msg layout {tabbed,toggle split}

# Move focused window
super + shift + {j,k,l,semicolon}
	i3-msg move {left,down,up,right}

super + shift + {Left,Down,Up,Right}
	i3-msg move {left,down,up,right}

# Resize focused window
super + alt + {Left,Down,Up,Right}
	i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt

# Make window omnipresent
alt + F8
	i3-msg sticky toggle

# Reload Keybinding
ctrl + alt + Escape
    pkill -USR1 -x sxhkd

# Quit bspwm
ctrl + shift + q
	i3-msg exit

# Quit bspwm
ctrl + shift + r
	i3-msg restart

# Hide/Unhide Window
super + d
	~/.config/i3/i3-winmask
	
# Restore Previous Workspace
super + shift + q
	~/.config/i3/i3-resurrect-dmenu

##---------- EOF ----------##

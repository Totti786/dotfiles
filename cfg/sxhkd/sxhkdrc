##------ Menus -------##

alt + space
	jgmenu_run

##------- Keybindings -------##

# Terminal (alacritty)
super + Return
	terminal --tiled

# Drop-down Terminal
alt + Return
	terminal --drop

# Floating Terminal
super + shift + Return
	terminal --float

# Fullscreen Terminal
super + t
	terminal --full
	
##------ Utilities -------##

# Rofi App Launcher
alt + F1
	rofi-utils --launch

# Rofi Menus
super + {x,s}
	rofi-utils --{power,shot}

# Rofi Media
super + {a,n,m}
	rofi-media --{anime,shows,movies}

# Rofi Applets
super + {r,b,l,j,y}	
	{rofi-reader,rofi-bluetooth,lobster,jerry,ytfzf -fD}
	
##------ Applications -------##

# Launch Apps
super + {e,f,w,o,v,p,z}
	{exo-open --launch FileManager,exo-open --launch WebBrowser,geany,obs,copyq toggle,color-picker,gtk-launch vesktop || gtk-launch discord}

super + shift + {s,w,r,l}
	{gtk-launch spotify-adblock || gtk-launch spotify,wpgtk pick,rofi-utils --record,lobster -c}

# Terminal Apps
ctrl + alt + {v,e,h}
	terminal --float -e {vim,yazi,htop}

# Reset Wallpaper
ctrl + alt + b
	~/.fehbg

# Lockscreen
ctrl + alt + l
   loginctl lock-session

# Random Wallpaper
ctrl + alt + w
   wpgtk random

##------- System Keys -------##

# Take a screenshot
Print
	shot --now

# Take screenshot of an area
shift + Print
	shot --area

# Take screenshot using flameshot
ctrl + Print
	shot --edit
	
# Take screenshot using flameshot
alt + Print
	shot --text

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	volume{ --inc, --dec, --toggle}

# Media control
XF86Audio{Next,Prev,Play,Pause,Stop}
	playerctl {next,previous,play-pause,play-pause,stop}

# Other Function keys

XF86Explorer
	thunar
	
XF86Search
	rofi-utils --launch
	
XF86Calculator
	gnome-calculator

XF86Tools
	xfce4-settings-manager
	
##---------- Misc. ----------##

# Restart Polybar
super + shift + m
	bar-style --reload

# Kill window
super + Escape
	xkill

# Switch window
alt + Tab
	windowswitch windowcd

# Switch window (across worksapces)
super + Tab
	windowswitch window

##---------- EOF ----------##

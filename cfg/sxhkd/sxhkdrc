##------- Keybindings -------##

# Terminal (alacritty)
super + Return
	alacritty

# Drop-down Terminal
alt + Return
	furminal --drop

# Floating Terminal
super + shift + Return
	furminal --float

# Fullscreen Terminal
super + t
	furminal --full

##------ Rofi & Menus -------##

# Right click menu
~button3
	xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run 
	
alt + space
	jgmenu_run

~button2
	xqp 0 $(xdo id -N Bspwm -n root) && \
	windowswitch window "-monitor -3"

super + ~button3
	xqp 0 $(xdo id -N Bspwm -n root) && ~/.config/jgmenu/pipemenus/jg-color alone

# Rofi App Launcher
alt + F1
	~/.config/rofi/bin/launcher

# Rofi Menus/Applets
super + {x,s,r}
	~/.config/rofi/bin/{powermenu,screenshot,asroot}

##------ Applications -------##

# Launch Apps
super + {e,f,w,o,b,y,v,p,g,l,m,j}
	{thunar,firefox,geany,obs,rofi-bluetooth,ytfzf -fD,copyq toggle,color-picker,rofi-zathura,lobster,rofi-movies,jerry}

super + z
	discord --enable-gpu-rasterization

super + shift + {s,w,r,d,l}
	{spotify,wpgtk pick,rhythmbox,dmenu.sh,lobster -c}

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty -e {vim,ranger,htop}

# Reset Wallpaper
ctrl + alt + b
	~/.fehbg

# Lockscreen
ctrl + alt + l
   lockscreen

# Random Wallpaper
ctrl + alt + w
  wpgtk random

##------- System Keys -------##

# Take a screenshot
Print
	takeshot --now

# Take screenshot using flameshot
alt + Print
	flameshot gui

# Take screenshot of an area
shift + Print
	takeshot --area

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	volume{ --inc, --dec, --toggle}

# Media control
XF86Audio{Next,Prev,Play,Pause,Stop}
	playerctl {next,previous,play-pause,play-pause,stop}

##---------- Misc. ----------##

# Restart Polybar
super + shift + m
	~/.config/jgmenu/pipemenus/bar-pipe reload

# Kill window
super + Escape
	xkill

# Switch window
alt + Tab
	windowswitch windowcd

# Switch window (across worksapces)
super + Tab
	windowswitch window

##---------- Bspwm ----------##

# Focus to the given desktop
super + {1-8}
    eval "$(xdotool getmouselocation --shell)" &&\
    xdotool mousemove 960 1185 click 1 &&\
    bspc desktop -f '^{1-8}' &&\
    xdotool mousemove --screen $SCREEN $X $Y
    
# Switch workspace
ctrl + super + {Left,Right,Up,Down}
	eval "$(xdotool getmouselocation --shell)" &&\
    xdotool mousemove 960 1185 click 1 &&\
	bspc desktop -f {prev.local,next.local,prev.local,next.local} &&\
    xdotool mousemove --screen $SCREEN $X $Y

# Move to the next or the previous workspace
super + {~button4, ~button5}
	eval "$(xdotool getmouselocation --shell)" &&\
    xdotool mousemove 960 1185 click 1 &&\
	bspc desktop -f {prev.local,next.local} &&\
    xdotool mousemove --screen $SCREEN $X $Y

# Send focused window to another workspace and switch to the workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' --follow

ctrl + shift + {Left,Right}
	bspc node --to-desktop {prev,next} --follow

ctrl + shift + {~button4, ~button5}
	bspc node --to-desktop {prev,next} --follow

# Close App
super + {q,c}
	bspc node -c
	herbstclient close

# Split horizontal, vertical or cancel
super + shift + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen
super + shift + f
    bspc node -t "~"fullscreen

# Monocle
super + shift + t
	bspc desktop -l next

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

alt + F8
	bspc node -g sticky

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Resizing windows
super + alt + Left
	bspc node -z right -20 0 & bspc node -z left +20 0
super + alt + Right
	bspc node -z right +20 0 & bspc node -z left -20 0
super + alt + Up
	bspc node -z top 0 -20 & bspc node -z bottom 0 +20
super + alt + Down
	bspc node -z top 0 +20 & bspc node -z bottom 0 -20

# Rotate windows
ctrl + super + {r,KP_Divide}
  bspc node @/ -R {90,90}

# Reload Keybinding
ctrl + alt + Escape
    pkill -USR1 -x sxhkd

# Quit bspwm
ctrl + shift + q
	bspc exit

# Quit bspwm
ctrl + shift + r
	bspc wm --restart

# Hide/Unhide Window
super + d
	~/.config/bspwm/winmask

##------ herbstluftwm -------##

# Focus to the given desktop
super + {1-9,0}
	
# Close App
super + {q,c}
	herbstclient close
	
# Reload herbstluftwm
super + ctrl + r
	herbstluftwm reload
	

##---------- EOF ----------##

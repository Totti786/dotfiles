##---------- Keybindings ----------##

# Terminal (alacritty)
super + Return
	alacritty

# Terminal (floating)
super + shift + Return
	furminal --float

# Drop Down Terminal
alt + Return
	tdrop -a -y 24  alacritty
	
# Terminal (fullscreen)
super + t
	furminal --full

##---------- Rofi Launcher & Menus ----------##

# Right click menu
~button3
  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run 

~button2
	xqp 0 $(xdo id -N Bspwm -n root) && \
	windowswitch "-monitor -3"

# Rofi App Launcher
alt + F1
	sh ~/.config/rofi/bin/launcher

# Rofi Menus/Applets
super + {m,x,r,s,i,n}
	sh ~/.config/rofi/bin/{media,powermenu,asroot,screenshot,network,~/.config/rofi/bin/network_menu}

##---------- Applications ----------##

# Launch Apps
super + {e,f,w,o,g,b,y,a,z,v}
	{thunar,firefox,geany,obs,zathura,rofi-bluetooth,ytfzf -fD,aniwrapper,discord,copyq show}

# Launch CopyQ
super + shift + {s,w,r}
	{spotify, sh ~/.local/bin/wpgtk pick,rhythmbox}

# Terminal Apps
ctrl + alt + {v,n,r,h}
	alacritty -e {vim,nvim,ranger,htop}

# Color Picker
super + p
	color-gpick

# Dmenu
super + shift + d
	dmenu.sh
# Lockscreen
ctrl + alt + l
   lockscreen

##---------- System Keys ----------##

# Take a screenshot
Print
	takeshot --now
	
# Take screenshot in 5 second
alt + Print	
	flameshot gui

# Take screenshot in 10 second
shift + Print	
	flameshot full -c

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Take screenshot of area
ctrl + alt + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle
	
# Music control
XF86Audio{Next,Prev,Play,Pause,Stop}
	playerctl {next,previous,play-pause,play-pause,stop}

##---------- Bspwm ----------##

# Close App
super + {q,c}
	bspc node -c

# Kill window
super + Escape
	xkill
	
# Reload Keybinding
ctrl + alt + Escape
    pkill -USR1 -x sxhkd

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + shift + {h,v,c}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen or Monocle
super + shift + f
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

alt + F8
	bspc node -g sticky

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch window
alt + Tab
	windowcdswitch

# Switch window (across worksapces)
super + Tab
	windowswitch

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Send focused window to another workspace and switch to the workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' --follow

## Resizing windows
super + alt + Left
	bspc node -z right -20 0 & bspc node -z left +20 0
super + alt + Right
	bspc node -z right +20 0 & bspc node -z left -20 0
super + alt + Up
	bspc node -z top 0 -20 & bspc node -z bottom 0 +20
super + alt + Down
	bspc node -z top 0 +20 & bspc node -z bottom 0 -20

## Rotate windows
ctrl + super + {r,KP_Divide}
  bspc node @/ -R {90,90}

## Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}jj

# Hide/Unhide Window
super + d
	~/.config/bspwm/winmask		
	
# Restart Polybar
super + shift + m
	sh ~/.config/polybar/launch.sh

##---------- EOF ----------##

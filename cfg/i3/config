## i3wm configuration

include ~/.config/i3/border

##-- Autostart ---------------------------

exec_always --no-startup-id 	~/.config/i3/autostart

##-- Fonts (Global) ----------------------

font pango:JetBrains Mono Medium 10

##-- Gaps --------------------------------

# Gaps (Outer gaps are added to the inner gaps)
gaps inner 10
gaps outer 0
gaps top 35
gaps bottom 0

# Only enable gaps on a workspace when there is at least one container
#smart_gaps on

# Uncomment this to enable title bars
for_window [class=".*"] border normal 0

# Title bar text alignment
title_align center

# Uncomment this to disable title bars
for_window [class=".*"] border pixel 0

# Activate smart borders (always)
smart_borders on

##-- Key Bindings ------------------------

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod4

##-- Window Rules ------------------------

for_window [title="AudioRelay|Library"] floating enable
for_window [title="Picture-in-Picture"] floating enable sticky enable
for_window [class="alacritty-drop"] floating enable sticky enable
for_window [class="Xfce4-.*|org.gnome.Weather|copyq|Sxiv|Music"] floating enable
for_window [class="Viewnior|Gpicview|Gimp|MPlayer|TelegramDesktop"] floating enable
for_window [class="Kvantum Manager|qt5ct|Nm-connection-editor|Anki"] floating enable
for_window [class="Lxappearance|Nitrogen|loupe|Yad|alacritty-float"] floating enable
for_window [class="steam|Trackma-gtk|obs|Pavucontrol|feh|scrcpy|Wpg"] floating enable
for_window [class="KotatogramDesktop|gnome-calculator|Blueman-manager"] floating enable
for_window [window_role="pop-up|bubble|task_dialog|Preferences|dialog"] floating enable

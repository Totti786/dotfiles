#! /bin/bash

apps=(polybar openbox i3 zathura dunst alacritty htop picom stalonetrayrc) 
DIR="$HOME/.config/"
BackupDir="$HOME/Documents/GitHub/dot-files/"

for bapps in "${apps[@]}"; do
	cp -r $DIR/$bapps $BackupDir/cfg/
done
rm -R $BackupDir/bin/.local/bin/ && cp -r $HOME/.local/bin $BackupDir/bin/.local
cp -r $DIR/wpg/wallpapers/wallpaper.jpg $BackupDir/deps/background.jpg
rm -R $BackupDir/bin/.scripts && cp -r $HOME/.scripts $BackupDir/bin

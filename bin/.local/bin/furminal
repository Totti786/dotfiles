#!/usr/bin/env bash

[[ -f "$HOME/.zprofile" ]] && source "$HOME/.zprofile"
[[ -z "$bar_style" ]] && top_padding="23"

CONFIG="$HOME/.config/alacritty/alacritty.yml"

if [ "$1" == "--float" ]; then
	alacritty --class 'alacritty-float,alacritty-float' --config-file "$CONFIG" "${@:2}"
elif [ "$1" == "--full" ]; then
	alacritty --class 'Fullscreen,Fullscreen' --config-file "$CONFIG" \
	-o window.startup_mode=fullscreen window.padding.x=30 window.padding.y=30 \
	window.opacity=0.6 font.size=12 "${@:2}"
elif [ "$1" == "--drop" ]; then 
	tdrop -t -a -m -w 70% -h 50% -y "$(( $top_padding + 10))" -x 15% alacritty --class 'alacritty-drop,alacritty-drop' --config-file "$CONFIG" "${@:2}"
else
	echo "Usage: $(basename $0) [options] [--]	
	Options:
	--float   	Open a Floating Terminal
	--full  	Open a Fullscreen Terminal
	--drop		Open a Drop-down Terminal"
fi

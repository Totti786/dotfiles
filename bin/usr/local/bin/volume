#!/bin/bash

## Script To Manage Volume Using Pamixer

# Get Volume
get_volume() {
	volume=`pamixer --get-volume-human`
	echo "$volume"
}

# Increase Volume
inc_volume() {
	pamixer -u -i 5 && dunstify -u low --replace=69 "Volume : $(get_volume)"
}

# Decrease Volume
dec_volume() {
	pamixer -u -d 10 && dunstify -u low --replace=69  "Volume : $(get_volume)"
}

# Toggle Mute
toggle_mute() {
	status=`pamixer --get-mute`

	if [[ "$status" == "false" ]]; then
		pamixer -t && dunstify -u low --replace=69 "Mute"
	else
		pamixer -t && dunstify -u low --replace=69 "Unmute"
	fi
}

# Execute accordingly
if [[ "$1" == "--get" ]]; then
	get_volume
elif [[ "$1" == "--inc" ]]; then
	inc_volume
elif [[ "$1" == "--dec" ]]; then
	dec_volume
elif [[ "$1" == "--toggle" ]]; then
	toggle_mute
else
	get_volume
fi

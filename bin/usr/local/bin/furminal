#!/usr/bin/env bash

CONFIG="$HOME/.config/alacritty/alacritty.yml"
if [[ -f "$HOME/.zprofile" ]]; then source "$HOME/.zprofile" ; else bar_style="base" ;fi


if [ "$1" == "--float" ]; then
	alacritty --class 'alacritty-float,alacritty-float' --config-file "$CONFIG" $2 $3
elif [ "$1" == "--full" ]; then
	alacritty --class 'Fullscreen,Fullscreen' --config-file "$CONFIG" \
	-o window.startup_mode=fullscreen window.padding.x=30 window.padding.y=30 \
	window.opacity=0.6 font.size=12 $2 $3
elif [ "$1" == "--drop" ]; then 
	if [ "$bar_style" == "base" ];then
		tdrop -a -w 70% -h 50% -y 33 -x 15% alacritty --class 'alacritty-drop,alacritty-drop' --config-file "$CONFIG"
	elif [ "$bar_style" == "minimal" ]; then
		tdrop -a -w 70% -h 50% -y 10 -x 15% alacritty --class 'alacritty-drop,alacritty-drop' --config-file "$CONFIG"
	fi
else
	echo "Usage: $(basename $0) [options] [--]	
	Options:
	--float   	Open a Floating Terminal
	--full  	Open a Fullscreen Terminal
	--drop		Open a Drop-down Terminal"
fi
